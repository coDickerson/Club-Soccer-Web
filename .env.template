# =============================================================================
# SOCCER CLUB ADMIN - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Instructions: Copy this file to .env and fill in your actual values
# Never commit .env to version control - keep it in .gitignore

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, production, or testing
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# Application URLs
APP_HOST=localhost
APP_PORT=8050
BASE_URL=http://localhost:8050

# =============================================================================
# GOOGLE SHEETS API CREDENTIALS
# =============================================================================
# Google Cloud Console - Enable Google Sheets API
GOOGLE_SHEETS_API_KEY=your-google-api-key-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Service Account Credentials (JSON file path or inline JSON)
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account-key.json
# OR as inline JSON (escaped):
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Google Sheets IDs for your club data
MEMBERS_SHEET_ID=your-members-google-sheet-id
EVENTS_SHEET_ID=your-events-google-sheet-id
ATTENDANCE_SHEET_ID=your-attendance-google-sheet-id

# =============================================================================
# WIX INTEGRATION CREDENTIALS
# =============================================================================
# Wix Developer Console - Create an app
WIX_APP_ID=your-wix-app-id
WIX_APP_SECRET=your-wix-app-secret
WIX_SITE_ID=your-wix-site-id

# Wix API URLs
WIX_API_BASE_URL=https://www.wixapis.com
WIX_OAUTH_URL=https://www.wix.com/oauth/authorize
WIX_TOKEN_URL=https://www.wix.com/oauth/access_token

# Wix Webhooks
WIX_WEBHOOK_SECRET=your-webhook-secret-key
WIX_WEBHOOK_URL=your-webhook-endpoint-url

# =============================================================================
# DATABASE SETTINGS (Optional - for local caching)
# =============================================================================
# SQLite for development
DATABASE_URL=sqlite:///soccer_club.db

# PostgreSQL for production (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/soccer_club

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Settings for session management
JWT_SECRET_KEY=your-jwt-secret-key-different-from-app-secret
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Password hashing
BCRYPT_LOG_ROUNDS=12

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Email settings (optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/soccer_club.log

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WIX_INTEGRATION=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_CACHING=True
CACHE_TIMEOUT=300  # 5 minutes

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development
RELOAD_ON_CHANGE=True
SHOW_DEBUG_TOOLBAR=True